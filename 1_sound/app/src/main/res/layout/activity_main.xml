<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="521dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout3" app:layout_constraintHorizontal_bias="0.0"
    >
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageView2"/>
        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/seekBar3"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp" android:paddingTop="50dp"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3">
        <Button
                android:text="prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/prev"
                android:insetLeft="10dp"/>
        <Button
                android:text="play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/play"
                android:insetLeft="10dp"/>
        <Button
                android:text="next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/next"
                android:insetLeft="10dp"/>
        <Button
                android:text="repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/repeat"
                android:insetLeft="10dp"/>
        <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/seekBar" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>